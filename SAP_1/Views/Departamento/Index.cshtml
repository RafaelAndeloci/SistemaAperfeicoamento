@model ICollection<SAP_1.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}

<h1>Departamento</h1>

<p>
    <a class="btn btn-primary" asp-action="Criar">Criar novo departamento</a>
</p>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome do departamento</th>
            <th>Localização</th>
            <th>Id Gerente</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-light">
                <td>@Html.DisplayFor(modelItem => item.IdDepartamento)</td>
                <td>@Html.DisplayFor(modelItem => item.NmDepartamento)</td>
                <td>@Html.DisplayFor(modelItem => item.Localizacao)</td>
                <td>@Html.DisplayFor(modelItem => item.IdGerente)</td>
                <td>
                    <a class="btn btn-secondary" asp-action="Editar" asp-route-idDepartamento="@item.IdDepartamento">Editar</a>
                    <a class="btn btn-secondary" asp-action="Detalhar" asp-route-idDepartamento="@item.IdDepartamento">Detalhar</a>
                    <a class="btn btn-danger" asp-action="Remover" asp-route-idDepartamento="@item.IdDepartamento">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>