@model SAP_1.Models.Curso

@{
    ViewData["Title"] = "Curso";
}

<h1>Id (@Model.IdCurso)</h1>
<h2>Categoria (@Model.Categoria)</h2>

<h4>Alterar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="IdCurso" />
            </div>
            <div class="form-group">
                <label asp-for="DsCurso" class="control-label"></label>
                <input asp-for="DsCurso" class="form-control" />
                <span asp-validation-for="DsCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" class="form-control" asp-items="@ViewBag.CategoriaCurso"></select>
            </div>
            <div class="form-group">
                <label asp-for="Duracao" class="control-label"></label>
                <input asp-for="Duracao" class="form-control" />
                <span asp-validation-for="Duracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FgAtivo" class="control-label"></label>
                <select asp-for="FgAtivo" class="form-control" asp-items="@ViewBag.StatusCurso"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-action="Index">Voltar</a>
</div>